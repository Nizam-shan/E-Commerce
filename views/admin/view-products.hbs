<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success add">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th>Price</th>
      <th scope="col">category</th>
      <th scope="col">discription</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
        
      
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Discription}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" style="width:50px ; height:50px"></td>
      <td ><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you you want to delete{{this.Name}}?')">Delete</a></td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
    <script>
    $(function () {
      $('#productsTable').DataTable();
    });
    </script>
</section>
